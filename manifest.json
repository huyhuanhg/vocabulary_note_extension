{
  "name": "Vocabulary",
  "description": "Vocabulary",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "/assets/js/background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "background",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "<all_urls>"
  ],
  "icons": {
    "16": "/assets/images/logo.png",
    "32": "/assets/images/logo.png",
    "48": "/assets/images/logo.png",
    "128": "/assets/images/logo.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/assets/images/logo.png",
      "32": "/assets/images/logo.png",
      "48": "/assets/images/logo.png",
      "128": "/assets/images/logo.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "/assets/css/injection.css"
      ],
      "js": [
        "/assets/js/injection.js"
      ]
    },
    {
      "matches": [
        "http://localhost:3000/extension/auth/login",
        "https://famous-sorbet-043f80.netlify.app/extension/auth/login"
      ],
      "js": [
        "/assets/js/login.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "/resources/box-content.stub.html",
        "/resources/box-gg-trans.stub.html",
        "/resources/box-word-detail.stub.html",
        "/resources/box-word-phonetic.stub.html",
        "/assets/images/empty_user.png"
      ]
    }
  ]
}
